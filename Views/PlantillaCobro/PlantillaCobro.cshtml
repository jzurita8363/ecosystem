@using ecosystem.Models

@{
    ViewBag.Title = "PlantillaCobro";
    Layout = "~/mainPage.cshtml";
}

<div>
    <div class="row" style="padding-right: 5px;margin-right: 0px;margin-left: 0px;">
        <div class="col-md-8">
            <label id="#empresaconf" style="color: white;">@ViewBag.ConductoresConf</label>
            <label id="#perfil" style="color: white;">@ViewBag.Perfil</label>
            <label id="#correoUsuario" style="color: white;">@ViewBag.Correo</label>
        </div>
        <div align="right" class="col-md-4" style="padding: 10px 5px 0px 0px; font-size: 0.93rem;">
            <label id="#ruta">Bienvenido(a)</label>
            <label id="#usuario" style="font-weight: bold;">@ViewBag.Usuario</label>
            <button id="salirUsuario" data-toggle="tooltip" data-placement="bottom" title="Cerrar Sesión" class="btn" style="color: #009900; font-size: 25px; padding-left: 0px; padding-right: 0px; padding-bottom: 10px;"><i class="fas fa-sign-out-alt"></i></button>
        </div>
    </div>
</div>

<div class="modal fade" id="nombrePlantilla" tabindex="-1" data-focus-on="input:first" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="card" style="margin-bottom: 5px;">
                <div class="card-header">
                    <a class="collapsed card-link">
                        <p class="font-weight-bold">NOMBRE DE LA PLANTILLA</p>
                    </a>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-12" style="padding: 0px 5px 0px 0px;">
                                <div class="form-group">
                                    <input class="form-control" id="nombreInicialPlantilla" autocomplete="off" onfocusout="checkVacio(this)">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="row" style="margin-top: 15px; margin-left:15px; margin-right: 15px;">
                    <div class="col-md-6"></div>
                    <div class="col-md-3" style="padding-right: 0px;">
                        <button id="cerrarNombrePlantilla" type="button" class="btn btn-light" style="margin-right: 5px; font-size: 0.85rem; width: 100%;">Cerrar</button>
                    </div>
                    <div class="col-md-3" style="padding-right: 0px;">
                        <button id="guardarNombrePlantilla" type="button" class="btn btn-info" style="margin-bottom: 20px; font-size: 0.85rem; width: 100%;">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="datosPlantilla" class="modal fade modal-open animated" tabindex="-1" data-focus-on="input:first" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content" style="padding: 15px;">
            <div class="row" style="margin-top: 15px; margin-left:15px; margin-right: 15px;">
                <div class="col-md-10" style="padding: 0px 5px 0px 0px;">
                    <div class="form-group">

                    </div>
                </div>
            </div>
            <div class="container" style="padding-top: 0px;">
                <div class="card" style="margin-bottom: 5px;">
                    <div class="card-header" style="background-color: white; color: #28a745;">
                        <a class="collapsed">
                            <p class="font-weight-bold" style="margin-bottom: 0px;">REGISTRO DE PLANTILLA</p>
                        </a>
                    </div>
                    <div id="registroTipoCuenta" class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-3" style="padding: 0px 5px 0px 0px;">
                                    <div class="form-group">
                                        <label for="">Código</label>
                                        <input class="form-control" id="codPlantilla" autocomplete="off" maxlength="8" onfocusout="checkVacio(this)">
                                    </div>
                                </div>
                                <div class="col-md-9" style="padding: 0px 5px 0px 0px;">
                                    <div class="form-group">
                                        <label for="">Descripción</label>
                                        <input class="form-control" id="descPlantilla" autocomplete="off" onfocusout="checkVacio(this)">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <p class="font-weight-bold" style="margin-top: 20px; margin-left: 20px;">TIPO DE VEHICULO</p>
                                </div>
                                <div class="col-md-7"></div>
                                <div class="col-md-2" style="padding-right: 22px;">
                                    <!--<button id="nuevoCampo" type="button" class="btn btn-info" style="margin-right: 5px; margin-top: 32px; font-size: 0.85rem; width: 100%;" data-toggle="modal" data-target="">Nuevo Campo</button>-->
                                </div>
                                <div class="panel-body table-wrapper-scroll-y my-custom-scrollbar" style="padding: 5px 20px 20px 20px; width: 100%;">
                                    <table id="tbl-plantillaVehiculo" class="table table-striped table-bordered customtable" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ACCIÓN</th>
                                                <th>DESCRIPCIÓN</th>
                                                <th>BAJADA BANDERA</th>
                                                <th>VALOR KM</th>
                                                <th>VALOR TAG</th>
                                                <th>VALOR MIN</th>
                                                <th>VALOR 200MTS</th>
                                                <th>BAJADA BANDERA VIP</th>
                                                <th>VALOR KM VIP</th>
                                                <th>VALOR TAG VIP</th>
                                                <th>VALOR MIN VIP</th>
                                                <th>VALOR 200MTS VIP</th>
                                                <th>TARIFA MINIMA</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 15px; margin-left:15px; margin-right: 15px;">
                                <div class="col-md-10"></div>
                                <div class="col-md-2" style="padding-right: 0px;">
                                    <button id="cerrarDatosPlantilla" type="button" class="btn btn-light" style="margin-right: 5px; font-size: 0.85rem; width: 100%;">Cerrar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Ventana Modal Registro Plantilla-->

<div class="modal fade" id="datosValoresVehiculos" tabindex="-1" data-focus-on="input:first" data-keyboard="false" data-backdrop="static">
